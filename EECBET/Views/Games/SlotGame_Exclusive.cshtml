<link rel="stylesheet" href="~/css/slotgamePage.css" asp-append-version="true" />
@{
    Layout = "~/Views/Shared/_SlotLayout.cshtml";
    ViewBag.Title = "獨創 SlotGame_Exclusive";
}
@* 抓資料欄位 *@
@model IEnumerable<EECBET.Models.GameListViewModel>


<div class="wrap">

    @* 抓取搜尋框 *@
    <partial name="_SlotSortPartial" />

    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @if (Model == null || !Model.Any())
            {
                <p>⚠️ 尚無資料或 API 連線失敗。</p>
            }
            else
            {
                @foreach (var g in Model.Where(g => g.GameCategory == "獨創"))
                {
                    <div class="swiper-slide" data-release-date="@g.ReleaseDate?.ToString("yyyy-MM-dd")">
                        <a href="#"><img src="@g.GameImageUrl" alt="@g.GameNameEN" /></a>
                    </div>
                }
            }
        </div>
    </div>
</div>