<link rel="stylesheet" href="~/css/slotgamePage.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/slotgameSwiper.css" asp-append-version="true" />
@{
    Layout = "~/Views/Shared/_SlotLayout.cshtml";
    ViewBag.Title = "頂級 SlotGame_Megaways";
}
@* 抓資料欄位 *@
@model IEnumerable<EECBET.Models.GameListViewModel>


<div class="wrap">
    <partial name="_SlotSortPartial" />
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @if (Model == null || !Model.Any())
            {
                <p>⚠️ 尚無資料或 API 連線失敗。</p>
            }
            else
            {
                @foreach (var g in Model)
                {
                    <div class="swiper-slide">

                        <tr>
                            <td> <a href=""><img src="@g.GameImageUrl" alt="icon" /></a></td>
                        </tr>

                    </div>
                }
            }
        </div>
    </div>
</div>