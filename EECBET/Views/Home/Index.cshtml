<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=LXGW+WenKai+Mono+TC&display=swap" rel="stylesheet">
  <title>beteec</title>
  <!-- 先載入 Bootstrap -->
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap JS Bundle (含 Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!--卡片的 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <link rel="stylesheet" href="/css/Lobby.css">
  <link rel="stylesheet" href="~/css/slotgameSwiper.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/Lobbylottery.css" asp-append-version="true" />
</head>

<body>


  <!-- 統計數字區 -->
  <div class="container">
    <div class="stats-section">
      <div class="stat-card">
        <div class="stat-number">87,087</div>
        <div class="stat-label">在線玩家</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">$8.7M</div>
        <div class="stat-label">今日累積獎金</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">1,234</div>
        <div class="stat-label">今日贏家</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">89.17%</div>
        <div class="stat-label">返還率</div>
      </div>
    </div>
  </div>

  <!-- 卡片區域 -->
  <div class="container my-4">
    <div class="row g-4">

      <!-- 第一張卡片 -->
      <div class="col-md-4">
        <div class="card card-image-only">
          <img
            src="https://content001.bet365.mx/Games/ProjectAwesome/LiveCasinoOffersSeason/November/1-LiveCasinoGiveaway/LCOS_LiveCasinoGiveaway_680x400.jpg"
            class="card-img" alt="遊戲介紹">
          <div class="card-overlay">
            <h5 class="card-title">遊戲介紹</h5>
            <p class="card-text">精選各類遊戲，淺顯易懂的教學，讓您快速上手!</p>
          </div>
        </div>
      </div>

      <!-- 第二張卡片 -->
      <div class="col-md-4">
        <div class="card card-image-only">
          <img src="https://content001.bet365.mx/Games/Awesome/LiveBlackjackChallenges_680x400.png" class="card-img"
            alt="儲值點數">
          <div class="card-overlay">
            <h5 class="card-title">儲值點數</h5>
            <p class="card-text">線上儲值，玩家錢包系統，首儲再送好禮!</p>
          </div>
        </div>
      </div>

      <!-- 第三張卡片 -->
      <div class="col-md-4">
        <div class="card card-image-only">
          <img src="https://content001.bet365.mx/Games/SGP/Test/NextGen/Gaming_680x400_Carousel_1.jpg" class="card-img"
            alt="萬聖狂歡節">
          <div class="card-overlay">
            <h5 class="card-title">萬聖狂歡節</h5>
            <p class="card-text">萬聖節奇趣派對驚喜上線中!多重大禮包等你拿!</p>
          </div>
        </div>
      </div>
    </div>

  </div>



  <div class="container mt-5">
    <!-- 輪播內容 -->
  
      <h3  class="fastStart">快速開始</h3>
  
    <!-- 老虎機的 -->
    @model IEnumerable<EECBET.Models.GameListViewModel>
    <section>
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          @foreach (GameListViewModel g in Model)
          {
            <div class="swiper-slide" data-release-date="@g.ReleaseDate?.ToString("yyyy-MM-dd")">
              <a href="#"><img src="@g.GameImageUrl" alt="@g.GameNameEN" /></a>
            </div>
          }
        </div>
        <!-- 左右箭頭 -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </section>


    <!-- 樂透的 -->
<section>
      <div class="lotterySection">
        <!-- 四星彩 -->
        <div class="lotteryBox">
          <div class="lottery-card" onclick="location.href='@Url.Action("Lottery539", "Home")'">
            <div class="lottery-card-header">
              <div class="lottery-icon">🎯</div>
              <div class="lottery-name">四星彩</div>
            </div>
          </div>
        </div>

        <!-- 大樂透 -->
        <div class="lotteryBox">
          <div class="lottery-card" onclick="location.href='@Url.Action("LotteryLotto", "Home")'">
            <div class="lottery-card-header">
              <div class="lottery-icon">🎲</div>
              <div class="lottery-name">大樂透</div>
            </div>
          </div>
        </div>

        <!-- 威力彩 -->
        <div class="lotteryBox">
          <div class="lottery-card" onclick="location.href='@Url.Action("LotteryPower", "Home")'">
            <div class="lottery-card-header">
              <div class="lottery-icon">⚡</div>
              <div class="lottery-name">威力彩</div>
            </div>
          </div>
        </div>

        <!-- 今彩539 -->
        <div class="lotteryBox">
          <div class="lottery-card" onclick="location.href='@Url.Action("LotteryToday539", "Home")'">
            <div class="lottery-card-header">
              <div class="lottery-icon">🌟</div>
              <div class="lottery-name">今彩539</div>
            </div>
          </div>
        </div>

        <!-- 雙色球 -->
        <div class="lotteryBox">
          <div class="lottery-card" onclick="location.href='@Url.Action("LotteryDoubleColor", "Home")'">
            <div class="lottery-card-header">
              <div class="lottery-icon">🔴🔵</div>
              <div class="lottery-name">雙色球</div>
            </div>
          </div>
        </div>
        
      </div>
     
</section>

    <!-- 輪播Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
      // .mySwiper 都獨立初始化
      document.querySelectorAll(".mySwiper").forEach((swiperEl, index) => {
        const nextBtn = swiperEl.querySelector(".swiper-button-next");
        const prevBtn = swiperEl.querySelector(".swiper-button-prev");

        const swiper = new Swiper(swiperEl, {
          slidesPerView: 6,
          spaceBetween: 8,
          loop: false, // ❌ 不循環
          speed: 1000, // 平滑
          autoplay: {
            delay: 0,
            disableOnInteraction: false
          },
          navigation: {
            nextEl: nextBtn,
            prevEl: prevBtn
          }
        });
   

        swiper.autoplay.stop(); // 預設靜止

        // 到頭或到尾 → 停止
        swiper.on("slideChange", () => {
          if (swiper.isBeginning || swiper.isEnd) {
            swiper.autoplay.stop();
          }
        });

        // Hover 右箭頭 → 往後播
        nextBtn.addEventListener("mouseenter", () => {
          if (!swiper.isEnd) {
            swiper.params.autoplay.reverseDirection = false;
            swiper.autoplay.start();
          }
        });
        nextBtn.addEventListener("mouseleave", () => swiper.autoplay.stop());

        // Hover 左箭頭 → 往前播
        prevBtn.addEventListener("mouseenter", () => {
          if (!swiper.isBeginning) {
            swiper.params.autoplay.reverseDirection = true;
            swiper.autoplay.start();
          }
        });
        prevBtn.addEventListener("mouseleave", () => swiper.autoplay.stop());
      });
    </script>


</body>

</html>