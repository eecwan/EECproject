    <!-- 優化後的輪播功能 -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // 為每個輪播容器設定功能
      document.querySelectorAll('.carousel-container').forEach((container, index) => {
        const track = container.querySelector('.carousel-track');
        const btnLeft = container.querySelector('.left-btn');
        const btnRight = container.querySelector('.right-btn');
        
        let isScrolling = false;
        let autoScrollInterval;
        
        // 計算每次滾動距離（一張圖片寬度 + 間距）
        const getScrollAmount = () => {
          const img = track.querySelector('img');
          return img ? img.offsetWidth + 10 : 190;
        };
        
        // 平滑滾動函數
        const smoothScroll = (direction) => {
          if (isScrolling) return;
          
          isScrolling = true;
          const scrollAmount = getScrollAmount();
          const targetScroll = direction === 'left' 
            ? track.scrollLeft - scrollAmount 
            : track.scrollLeft + scrollAmount;
          
          // 使用原生滾動 API，更流暢
          track.scrollTo({
            left: targetScroll,
            behavior: 'smooth'
          });
          
          // 檢查是否到達邊界，如果是則重置到開頭
          setTimeout(() => {
            if (direction === 'right' && track.scrollLeft >= track.scrollWidth - track.clientWidth - 50) {
              setTimeout(() => {
                track.scrollTo({ left: 0, behavior: 'smooth' });
              }, 300);
            }
            isScrolling = false;
          }, 400);
        };
        
        // 左右按鈕事件
        btnLeft.addEventListener('click', (e) => {
          e.preventDefault();
          smoothScroll('left');
        });
        
        btnRight.addEventListener('click', (e) => {
          e.preventDefault();
          smoothScroll('right');
        });
        
        // 自動輪播功能（每個輪播延遲不同時間開始，產生錯落效果）
        const startAutoScroll = () => {
          autoScrollInterval = setInterval(() => {
            smoothScroll('right');
          }, 2500 + (index * 300)); // 每排間隔 300ms，產生視覺層次
        };
        
        const stopAutoScroll = () => {
          if (autoScrollInterval) {
            clearInterval(autoScrollInterval);
          }
        };
        
        // 滑鼠移入暫停，移出恢復
        track.addEventListener('mouseenter', stopAutoScroll);
        track.addEventListener('mouseleave', startAutoScroll);
        
        // 觸控支援
        let touchStartX = 0;
        let touchEndX = 0;
        
        track.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
          stopAutoScroll();
        });
        
        track.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          const diff = touchStartX - touchEndX;
          
          if (Math.abs(diff) > 50) {
            smoothScroll(diff > 0 ? 'right' : 'left');
          }
          
          startAutoScroll();
        });
        
        // 啟動自動輪播
        startAutoScroll();
      });
    });
  </script>

