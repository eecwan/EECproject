            @:if (total <= 0) {
            @:    alert('è«‹è¼¸å…¥æŠ•æ³¨é‡‘é¡');
            @:    return;
            @:}
            @:hasBetThisRound = true;
            @:currentBetPayload = {
            @:    Numbers: selectedNumbers,
            @:    Bet2: parseInt($('#bet2').val()),
            @:    Bet3: parseInt($('#bet3').val()),
            @:    Bet4: parseInt($('#bet4').val()),
