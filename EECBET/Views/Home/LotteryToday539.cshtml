            @:    alert('è«‹é¸æ“‡5å€‹è™Ÿç¢¼');
            @:    return;
            @:}
            @:const total = parseInt($('#totalAmount').text());
            @:if (total <= 0) {
            @:    alert('è«‹è¼¸å…¥æŠ•æ³¨é‡‘é¡');
            @:    return;
            @:}
            @:hasBetThisRound = true;
            @:currentBetPayload = {
            @:    Numbers: selectedNumbers,
            @:    BetAmount: parseInt($('#betAmount').val()),
            @:    BetCount: parseInt($('#betCount').val()),
            @:    TotalAmount: total
