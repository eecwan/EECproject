<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/member.css" />
  </head>

  <body>
    <div class="container">
      <!-- 側邊欄 -->
      <div class="sidebar">
        <div class="user-info">
          <div class="avatar">👤</div>
          <div class="username">玩家名稱</div>
          <div class="user-id">ID: 123456789</div>
        </div>

        <div class="menu-item active" data-page="overview">
          <!-- data- 是前綴（自訂屬性），page 由自己命名-->
          <span class="menu-icon">💰</span>
          <span>狀態一覽</span>
        </div>
        <div class="menu-item" data-page="profile">
          <span class="menu-icon">👤</span>
          <span>個人資料</span>
        </div>
      </div>

      <!-- 主要內容區 -->
      <div class="main-content">
        <!-- 狀態一覽頁面 -->
        <div class="page-content active" id="overview-page">
          <h2 class="section-title">💰 點數管理</h2>
          <!-- 錢包卡片 -->
          <div class="wallet-cards">
            <div class="wallet-card">
              <div class="wallet-label">點數餘額</div>
              <div class="wallet-amount">NT$ 87,878</div>
            </div>
            <div class="wallet-card">
              <div class="wallet-label">今日盈虧</div>
              <div class="wallet-amount">+ NT$ 870</div>
              <div class="wallet-buttons">
                <button class="btn btn-primary">查看詳情</button>
              </div>
            </div>
          </div>

          <!-- 統計資訊 -->
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-label">總投注額</div>
              <div class="stat-value">NT$ 123,456</div>
            </div>
            <div class="stat-card">
              <div class="stat-label">總中獎額</div>
              <div class="stat-value">NT$ 15,151</div>
            </div>
          </div>

          <!-- 投注紀錄表格 -->
          <h3 style="margin: 40px 0 20px">📋 最近投注記錄</h3>
          <div class="form-row" style="margin-bottom: 20px">
            <div class="form-group">
              <label for="" class="form-label">開始日期</label>
              <input type="date" class="form-input" />
            </div>
            <div class="form-group">
              <label for="" class="form-label">結束日期</label>
              <input type="date" class="form-input" />
            </div>
            <div class="form-group">
              <label for="" class="form-label">遊戲類型</label>
              <select name="" id="" class="form-input">
                <option value="">全部</option>
                <option value="">Slot 遊戲</option>
                <option value="">Lottery 彩票遊戲</option>
                <option value="">百家樂</option>
              </select>
            </div>
          </div>

          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>時間</th>
                  <th>遊戲名稱</th>
                  <th>投注金額</th>
                  <th>結果</th>
                  <th>盈虧</th>
                  <th>狀態</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>2025-10-09 15:35</td>
                  <td>幸運轉輪</td>
                  <td>NT$ 1,000</td>
                  <td>未中獎</td>
                  <td style="color: #f44336">NT$ -1,000</td>
                  <td class="status-settled">已結算</td>
                </tr>
                <tr>
                  <td>2025-10-09 14:20</td>
                  <td>百家樂</td>
                  <td>NT$ 2,500</td>
                  <td>中獎</td>
                  <td style="color: #4caf50">NT$ +2,500</td>
                  <td class="status-settled">已結算</td>
                </tr>
                <tr>
                  <td>2025-10-08 20:10</td>
                  <td>老虎機 - 金幣探險</td>
                  <td>NT$ 500</td>
                  <td>未中獎</td>
                  <td style="color: #f44336">NT$ -500</td>
                  <td class="status-settled">已結算</td>
                </tr>
                <tr>
                  <td>2025-10-08 18:45</td>
                  <td>彩票 - 超級大樂透</td>
                  <td>NT$ 1,200</td>
                  <td>中獎</td>
                  <td style="color: #4caf50">NT$ +10,000</td>
                  <td class="status-settled">已結算</td>
                </tr>
                <tr>
                  <td>2025-10-07 22:30</td>
                  <td>輪盤賭</td>
                  <td>NT$ 3,000</td>
                  <td>處理中</td>
                  <td>---</td>
                  <td class="status-pending">待開獎</td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- 分頁 -->
          <div class="pagination">
            <button class="page-btn">上一頁</button>
            <button class="page-btn active">1</button>
            <button class="page-btn">2</button>
            <button class="page-btn">3</button>
            <button class="page-btn">...</button>
            <button class="page-btn">10</button>
            <button class="page-btn">下一頁</button>
          </div>
        </div>

        <!-- 個人資料頁面 -->
        <div class="page-content" id="profile-page">
          <div class="section-title">
            <span>👤 個人資料</span>
            <button class="btn btn-edit">✏️ 編輯資料</button>
          </div>

          <div class="profile-card">
            <div class="profile-header">
              <div class="profile-avatar">👤</div>
              <div class="profile-info">
                <div class="profile-name">玩家名稱</div>
                <div class="profile-meta">
                  <div class="meta-item">
                    <span class="meta-label">用戶名</span>
                    <span class="meta-value">xx123xx</span>
                  </div>
                  <div class="meta-item">
                    <span class="meta-label">出生日期</span>
                    <span class="meta-value">1990-01-01</span>
                  </div>
                  <div class="meta-item">
                    <span class="meta-label">註冊日期</span>
                    <span class="meta-value">2020-01-01</span>
                  </div>
                  <div class="meta-item">
                    <span class="meta-label">ID</span>
                    <span class="meta-value">123456789</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="info-section">
              <div class="info-section-title">📧 聯絡資訊</div>
              <div class="info-grid">
                <div class="info-item">
                  <span class="info-label">電子郵件</span>
                  <div class="info-value verified">
                    <span>xx123xx@@*****.com</span>
                    <span class="verified-badge">✓ 已驗證</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">地址</span>
                  <div class="info-value">
                    <span>桃園市桃園區***</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">手機號碼</span>
                  <div class="info-value">
                    <span>+886 9** *** ***</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">城市</span>
                  <div class="info-value">
                    <span>桃園市</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">郵遞區號</span>
                  <div class="info-value">
                    <span>330</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">通訊語言</span>
                  <div class="info-value">
                    <span>繁體中文</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="info-section">
              <div class="info-section-title">🔐 帳戶資訊</div>
              <div class="info-grid">
                <div class="info-item">
                  <span class="info-label">帳戶狀態</span>
                  <div class="info-value verified">
                    <span>已啟用</span>
                    <span class="verified-badge">✓ 已驗證</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">會員等級</span>
                  <div class="info-value">
                    <span style="color: #fbbf24; font-weight: 600"
                      >💎 黃金會員</span
                    >
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">最後登入時間</span>
                  <div class="info-value">
                    <span>2025-10-16 14:30</span>
                  </div>
                </div>
                <div class="info-item">
                  <span class="info-label">登入裝置</span>
                  <div class="info-value">
                    <span>Chrome / Windows</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // 選單切換功能
      const menuItems = document.querySelectorAll(".menu-item");
      // 找到所有 class 為 menu-item 的元素
      const pageContents = document.querySelectorAll(".page-content");
      // 找到所有 class 為 page-content 的元素

      menuItems.forEach((item) => {
        // 對每個選單項目添加點擊事件監聽器
        item.addEventListener("click", function () {
          // 移除所有 active 狀態
          menuItems.forEach((i) => i.classList.remove("active"));
          pageContents.forEach((p) => p.classList.remove("active"));

          // 添加 active 到當前選擇的項目
          this.classList.add("active");

          // 顯示對應的頁面
          const pageName = this.getAttribute("data-page");
          document.getElementById(pageName + "-page").classList.add("active");
        });
      });
    </script>
  </body>
</html>
