@{
    ViewData["Title"] = "點數管理";
    var member = ViewBag.Member as EECBET.Models.Member;
    var displayName = !string.IsNullOrEmpty(member?.Lastname) || !string.IsNullOrEmpty(member?.Firstname)
    ? $"{member?.Lastname} {member?.Firstname}"
    : member?.Username ?? "玩家";
}

<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>點數管理系統</title>
    <link rel="stylesheet" href="~/css/points.css" />
</head>

<body>
    <div class="container">
        <!-- 側邊欄 -->
        <div class="sidebar">
            <div class="user-info">
                <div class="avatar">👤</div>
                <div class="username">@displayName</div>
                <div class="user-id">ID: @member?.Id</div>
            </div>

            <div class="menu-item active" data-page="overview">
                <span class="menu-icon">💰</span>
                <span>狀態一覽</span>
            </div>
            <div class="menu-item" data-page="profile">
                <span class="menu-icon">👤</span>
                <span>個人資料</span>
            </div>
        </div>

        <!-- 主要內容區 -->
        <div class="main-content">
            <!-- 狀態一覽頁面 -->
            <div class="page-content active" id="overview-page">
                <h2 class="section-title">💰 點數管理</h2>

                <!-- 錢包卡片 -->
                <div class="wallet-cards">
                    <div class="wallet-card">
                        <div class="wallet-label">點數餘額</div>
                        <div class="wallet-amount" id="balanceDisplay">NT$ @member?.Points.ToString("N0")</div>
                    </div>
                    <div class="wallet-card">
                        <div class="wallet-label">今日盈虧</div>
                        <div class="wallet-amount" id="todayProfitDisplay">NT$ 0</div>
                    </div>
                </div>

                <!-- 統計資訊 -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-label">總投注額</div>
                        <div class="stat-value" id="totalBetDisplay">NT$ @member?.TotalBet.ToString("N0")</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">總中獎額</div>
                        <div class="stat-value" id="totalWinDisplay">NT$ @member?.TotalWin.ToString("N0")</div>
                    </div>
                </div>

                <!-- 遊戲記錄 -->
                <div class="game-records-section" style="margin-top: 30px;">
                    <h3 class="section-title">📝 遊戲記錄</h3>
                    <div class="game-records-container">
                        <table class="game-records-table" id="gameRecordsTable">
                            <thead>
                                <tr>
                                    <th>遊戲類型</th>
                                    <th>期數</th>
                                    <th>投注金額</th>
                                    <th>中獎金額</th>
                                    <th>結果</th>
                                    <th>餘額變動</th>
                                    <th>時間</th>
                                </tr>
                            </thead>
                            <tbody id="gameRecordsBody">
                                <tr>
                                    <td colspan="7" style="text-align: center; padding: 20px;">載入中...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- 個人資料頁面 -->
            <div class="page-content" id="profile-page">
                <div class="section-title">
                    <span>👤 個人資料</span>
                    <button class="btn btn-edit" id="editBtn" onclick="toggleEditMode()">✏️ 編輯資料</button>
                    <button class="btn btn-primary" id="saveBtn" onclick="saveProfile()" style="display: none;">💾
                        儲存</button>
                    <button class="btn btn-secondary" id="cancelBtn" onclick="cancelEdit()" style="display: none;">❌
                        取消</button>
                </div>

                <div class="profile-card">
                    <div class="profile-header">
                        <div class="profile-avatar">👤</div>
                        <div class="profile-info">
                            <div class="profile-name">@displayName</div>
                            <div class="profile-meta">
                                <div class="meta-item">
                                    <span class="meta-label">用戶名</span>
                                    <span class="meta-value">@member?.Username</span>
                                </div>
                                <div class="meta-item">
                                    <span class="meta-label">出生日期</span>
                                    <input type="date" class="profile-input" id="birthdayInput"
                                        value="@(member?.Birthday?.ToDateTime(TimeOnly.MinValue).ToString("yyyy-MM-dd") ?? "")"
                                        style="display: none;" />
                                    <span class="meta-value"
                                        id="birthdayDisplay">@(member?.Birthday?.ToDateTime(TimeOnly.MinValue).ToString("yyyy-MM-dd")
                                                                                ?? "未設定")</span>
                                </div>
                                <div class="meta-item">
                                    <span class="meta-label">註冊日期</span>
                                    <span
                                        class="meta-value">@(member?.CreatedAt.ToDateTime(TimeOnly.MinValue).ToString("yyyy-MM-dd"))</span>
                                </div>
                                <div class="meta-item">
                                    <span class="meta-label">ID</span>
                                    <span class="meta-value">@member?.Id</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <div class="info-section-title">📧 聯絡資訊</div>
                        <div class="info-grid">
                            <div class="info-item">
                                <span class="info-label">姓氏</span>
                                <input type="text" class="profile-input" id="lastnameInput"
                                    value="@(member?.Lastname ?? "")" style="display: none;" />
                                <div class="info-value" id="lastnameDisplay">
                                    <span>@(member?.Lastname ?? "未設定")</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-label">名字</span>
                                <input type="text" class="profile-input" id="firstnameInput"
                                    value="@(member?.Firstname ?? "")" style="display: none;" />
                                <div class="info-value" id="firstnameDisplay">
                                    <span>@(member?.Firstname ?? "未設定")</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-label">電子郵件</span>
                                <input type="email" class="profile-input" id="emailInput" value="@(member?.Email ?? "")"
                                    style="display: none;" />
                                <div class="info-value verified" id="emailDisplay">
                                    <span>@(member?.Email ?? "未設定")</span>
                                    @if (!string.IsNullOrEmpty(member?.Email))
                                    {
                                        <span class="verified-badge">✓ 已驗證</span>
                                    }
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-label">國家/地區</span>
                                <select class="profile-input" id="countryInput" style="display: none;">
                                    <option value="">請選擇</option>
                                    <option value="台灣">台灣</option>
                                    <option value="日本">日本</option>
                                    <option value="韓國">韓國</option>
                                </select>
                                <div class="info-value" id="countryDisplay">
                                    <span>@(member?.Country ?? "未設定")</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-label">性別</span>
                                <select class="profile-input" id="genderInput" style="display: none;">
                                    <option value="">請選擇</option>
                                    <option value="male">男</option>
                                    <option value="female">女</option>
                                    <option value="none">不方便透露</option>
                                </select>
                                <div class="info-value" id="genderDisplay">
                                    <span>@(member?.Gender == "male" ? "男" : member?.Gender == "female" ? "女" :
                                                                                member?.Gender == "none" ? "不方便透露" : "未設定")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <div class="info-section-title">🔐 帳戶資訊</div>
                        <div class="info-grid">
                            <!-- <div class="info-item">
                                <span class="info-label">帳戶狀態</span>
                                <div class="info-value verified">
                                    <span>已啟用</span>
                                    <span class="verified-badge">✓ 已驗證</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-label">會員等級</span>
                                <div class="info-value">
                                    <span style="color: #fbbf24; font-weight: 600">💎 黃金會員</span>
                                </div>
                            </div> -->
                            <div class="info-item">
                                <span class="info-label">點數餘額</span>
                                <div class="info-value">
                                    <span style="color: #fbbf24; font-weight: 600">💰 NT$
                                        @member?.Points.ToString("N0")</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="info-label">最後登入時間</span>
                                <div class="info-value">
                                    <span>@(member?.LastLogin?.ToDateTime(TimeOnly.MinValue).ToString("yyyy-MM-dd") ??
                                                                                "從未登入")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/points.js"></script>
    <script>
        let isEditMode = false;

        // 載入遊戲記錄
        async function loadGameRecords() {
            try {
                const response = await fetch('/Member/GetGameRecords');
                const data = await response.json();

                if (data.success) {
                    const tbody = document.getElementById('gameRecordsBody');
                    if (data.records && data.records.length > 0) {
                        tbody.innerHTML = data.records.map(record => `
                            <tr>
                                <td>${record.gameType}</td>
                                <td>${record.issueNo}</td>
                                <td>NT$ ${parseFloat(record.betAmount).toLocaleString('zh-TW', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}</td>
                                <td>NT$ ${parseFloat(record.winAmount).toLocaleString('zh-TW', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}</td>
                                <td>${record.result || '未中獎'}</td>
                                <td>${parseFloat(record.pointsBefore).toLocaleString()} → ${parseFloat(record.pointsAfter).toLocaleString()}</td>
                                <td>${record.createdAt}</td>
                            </tr>
                        `).join('');
                    } else {
                        tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 20px;">尚無遊戲記錄</td></tr>';
                    }
                } else {
                    document.getElementById('gameRecordsBody').innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 20px;">載入失敗</td></tr>';
                }
            } catch (error) {
                console.error('Error loading game records:', error);
                document.getElementById('gameRecordsBody').innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 20px;">載入失敗</td></tr>';
            }
        }

        // 更新餘額
        async function updateBalance() {
            try {
                const response = await fetch('/Member/GetBalance');
                const data = await response.json();

                if (data.success) {
                    document.getElementById('balanceDisplay').textContent = `NT$ ${parseFloat(data.balance).toLocaleString('zh-TW', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}`;
                    document.getElementById('todayProfitDisplay').textContent = `NT$ ${parseFloat(data.todayProfit || 0).toLocaleString('zh-TW', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}`;
                    document.getElementById('totalBetDisplay').textContent = `NT$ ${parseFloat(data.totalBet).toLocaleString('zh-TW', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}`;
                    document.getElementById('totalWinDisplay').textContent = `NT$ ${parseFloat(data.totalWin).toLocaleString('zh-TW', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}`;
                }
            } catch (error) {
                console.error('Error updating balance:', error);
            }
        }

        // 頁面載入時執行
        document.addEventListener('DOMContentLoaded', function () {
            loadGameRecords();
            updateBalance();

            // 每5秒更新一次餘額和記錄
            setInterval(() => {
                updateBalance();
                loadGameRecords();
            }, 5000);
        });

        function toggleEditMode() {
            isEditMode = !isEditMode;

            if (isEditMode) {
                document.getElementById('editBtn').style.display = 'none';
                document.getElementById('saveBtn').style.display = 'inline-block';
                document.getElementById('cancelBtn').style.display = 'inline-block';

                // 顯示輸入框
                document.getElementById('lastnameInput').style.display = 'block';
                document.getElementById('firstnameInput').style.display = 'block';
                document.getElementById('emailInput').style.display = 'block';
                document.getElementById('countryInput').style.display = 'block';
                document.getElementById('genderInput').style.display = 'block';
                document.getElementById('birthdayInput').style.display = 'block';

                // 設定下拉選單的預設值
                @if (member != null)
                    {
                        <text>
                            document.getElementById('countryInput').value = '@member.Country';
                            document.getElementById('genderInput').value = '@member.Gender';
                        </text>
                }

                    // 隱藏顯示文字
                    document.getElementById('lastnameDisplay').style.display = 'none';
                document.getElementById('firstnameDisplay').style.display = 'none';
                document.getElementById('emailDisplay').style.display = 'none';
                document.getElementById('countryDisplay').style.display = 'none';
                document.getElementById('genderDisplay').style.display = 'none';
                document.getElementById('birthdayDisplay').style.display = 'none';
            } else {
                cancelEdit();
            }
        }

        function cancelEdit() {
            isEditMode = false;

            document.getElementById('editBtn').style.display = 'inline-block';
            document.getElementById('saveBtn').style.display = 'none';
            document.getElementById('cancelBtn').style.display = 'none';

            // 隱藏輸入框
            document.getElementById('lastnameInput').style.display = 'none';
            document.getElementById('firstnameInput').style.display = 'none';
            document.getElementById('emailInput').style.display = 'none';
            document.getElementById('countryInput').style.display = 'none';
            document.getElementById('genderInput').style.display = 'none';
            document.getElementById('birthdayInput').style.display = 'none';

            // 顯示顯示文字
            document.getElementById('lastnameDisplay').style.display = 'block';
            document.getElementById('firstnameDisplay').style.display = 'block';
            document.getElementById('emailDisplay').style.display = 'block';
            document.getElementById('countryDisplay').style.display = 'block';
            document.getElementById('genderDisplay').style.display = 'block';
            document.getElementById('birthdayDisplay').style.display = 'block';
        }

        async function saveProfile() {
            try {
                const data = {
                    lastname: document.getElementById('lastnameInput').value,
                    firstname: document.getElementById('firstnameInput').value,
                    email: document.getElementById('emailInput').value,
                    country: document.getElementById('countryInput').value,
                    gender: document.getElementById('genderInput').value,
                    birthday: document.getElementById('birthdayInput').value || null
                };

                const response = await fetch('/Member/UpdateProfile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    alert('資料更新成功！');
                    // 重新導向到 Points 頁面以重新載入資料
                    window.location.href = '/Member/Points';
                } else {
                    alert('更新失敗：' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('更新時發生錯誤，請稍後再試');
            }
        }
    </script>
    <style>
        .profile-input {
            width: 100%;
            padding: 8px;
            border: 2px solid #00ff88;
            border-radius: 4px;
            background: #1a1a1a;
            color: #fff;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            margin-left: 10px;
            font-size: 14px;
        }

        .btn-primary {
            background: #00ff88;
            color: #1a1a1a;
        }

        .btn-secondary {
            background: #666;
            color: #fff;
        }

        .game-records-section {
            margin-top: 30px;
        }

        .game-records-container {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            padding: 20px;
            overflow-x: auto;
        }

        .game-records-table {
            width: 100%;
            border-collapse: collapse;
            color: #fff;
        }

        .game-records-table thead {
            background: rgba(255, 215, 0, 0.1);
        }

        .game-records-table th {
            padding: 12px 8px;
            text-align: left;
            font-weight: 600;
            border-bottom: 2px solid rgba(255, 215, 0, 0.3);
        }

        .game-records-table td {
            padding: 10px 8px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .game-records-table tbody tr:hover {
            background: rgba(255, 215, 0, 0.05);
        }

        .game-records-table tbody tr:last-child td {
            border-bottom: none;
        }
    </style>
</body>

</html>