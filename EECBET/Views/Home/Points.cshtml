@{
  ViewData["Title"] = "點數管理";
}

<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>點數管理系統</title>
  <link rel="stylesheet" href="~/css/points.css" />
</head>

<body>
  <div class="container">
    <!-- 側邊欄 -->
    <div class="sidebar">
      <div class="user-info">
        <div class="avatar">👤</div>
        <div class="username">玩家名稱</div>
        <div class="user-id">ID: 123456789</div>
      </div>

      <div class="menu-item active" data-page="overview">
        <span class="menu-icon">💰</span>
        <span>狀態一覽</span>
      </div>
      <div class="menu-item" data-page="profile">
        <span class="menu-icon">👤</span>
        <span>個人資料</span>
      </div>
    </div>

    <!-- 主要內容區 -->
    <div class="main-content">
      <!-- 狀態一覽頁面 -->
      <div class="page-content active" id="overview-page">
        <h2 class="section-title">💰 點數管理</h2>

        <!-- 錢包卡片 - 已移除新增記錄按鈕 -->
        <div class="wallet-cards">
          <div class="wallet-card">
            <div class="wallet-label">點數餘額</div>
            <div class="wallet-amount" id="totalBalance">NT$ 0</div>
          </div>
          <div class="wallet-card">
            <div class="wallet-label">今日盈虧</div>
            <div class="wallet-amount" id="todayChange">NT$ 0</div>
          </div>
        </div>

        <!-- 統計資訊 -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-label">總投注額</div>
            <div class="stat-value" id="totalIncome">NT$ 0</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">總中獎額</div>
            <div class="stat-value" id="totalExpense">NT$ 0</div>
          </div>
        </div>

        <!-- 投注紀錄表格 -->
        <h3 style="margin: 40px 0 20px">📋 最近投注記錄</h3>
        <div class="form-row" style="margin-bottom: 20px">
          <div class="form-group">
            <label for="startDate" class="form-label">開始日期</label>
            <input type="date" class="form-input" id="startDate" />
          </div>
          <div class="form-group">
            <label for="endDate" class="form-label">結束日期</label>
            <input type="date" class="form-input" id="endDate" />
          </div>
          <div class="form-group">
            <label for="categoryFilter" class="form-label">遊戲類型</label>
            <select name="" id="categoryFilter" class="form-input">
              <option value="">全部</option>
            </select>
          </div>
          <div class="form-group" style="display: flex; align-items: flex-end; gap: 10px;">
            <button class="btn btn-primary" onclick="filterTransactions()" style="flex: 1;">篩選</button>
            <button class="btn btn-edit" onclick="resetFilters()" style="flex: 1;">重設</button>
          </div>
        </div>

        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>時間</th>
                <th>遊戲名稱</th>
                <th>投注金額</th>
                <th>結果</th>
                <th>盈虧</th>
                <th>狀態</th>
              </tr>
            </thead>
            <tbody id="transactionsBody">
              <tr>
                <td colspan="6" style="text-align: center; padding: 40px; color: #999;">載入中...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- 個人資料頁面 -->
      <div class="page-content" id="profile-page">
        <div class="section-title">
          <span>👤 個人資料</span>
          <button class="btn btn-edit">✏️ 編輯資料</button>
        </div>

        <div class="profile-card">
          <div class="profile-header">
            <div class="profile-avatar">👤</div>
            <div class="profile-info">
              <div class="profile-name">玩家名稱</div>
              <div class="profile-meta">
                <div class="meta-item">
                  <span class="meta-label">用戶名</span>
                  <span class="meta-value">xx123xx</span>
                </div>
                <div class="meta-item">
                  <span class="meta-label">出生日期</span>
                  <span class="meta-value">1990-01-01</span>
                </div>
                <div class="meta-item">
                  <span class="meta-label">註冊日期</span>
                  <span class="meta-value">2020-01-01</span>
                </div>
                <div class="meta-item">
                  <span class="meta-label">ID</span>
                  <span class="meta-value">123456789</span>
                </div>
              </div>
            </div>
          </div>

          <div class="info-section">
            <div class="info-section-title">📧 聯絡資訊</div>
            <div class="info-grid">
              <div class="info-item">
                <span class="info-label">電子郵件</span>
                <div class="info-value verified">
                  <span>xx123xx@@*****.com</span>
                  <span class="verified-badge">✓ 已驗證</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">地址</span>
                <div class="info-value">
                  <span>桃園市桃園區***</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">手機號碼</span>
                <div class="info-value">
                  <span>+886 9** *** ***</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">城市</span>
                <div class="info-value">
                  <span>桃園市</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">郵遞區號</span>
                <div class="info-value">
                  <span>330</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">通訊語言</span>
                <div class="info-value">
                  <span>繁體中文</span>
                </div>
              </div>
            </div>
          </div>

          <div class="info-section">
            <div class="info-section-title">🔐 帳戶資訊</div>
            <div class="info-grid">
              <div class="info-item">
                <span class="info-label">帳戶狀態</span>
                <div class="info-value verified">
                  <span>已啟用</span>
                  <span class="verified-badge">✓ 已驗證</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">會員等級</span>
                <div class="info-value">
                  <span style="color: #fbbf24; font-weight: 600">💎 黃金會員</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">最後登入時間</span>
                <div class="info-value">
                  <span>2025-10-16 14:30</span>
                </div>
              </div>
              <div class="info-item">
                <span class="info-label">登入裝置</span>
                <div class="info-value">
                  <span>Chrome / Windows</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/js/points.js"></script>
</body>

</html>