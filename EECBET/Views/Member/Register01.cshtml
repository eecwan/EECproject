@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>註冊頁</title>
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

</head>

<body>
    <div class="wrap">
        <!-- logo -->
        <div class="header">
            <img src="/images/Logo_ECC366.svg" alt="logo">
            <h1 id="regTitle">註冊</h1>
        </div>

        <!-- 進度條 -->
        <div class="stepBox">
            <div class="progress-container">
                <div class="progress" id="progress"></div>
                <div class="step">
                    <div class="circle active">1</div>
                </div>
                <div class="step">
                    <div class="circle">2</div>
                </div>
            </div>
        </div>

        <!-- 會更換的區域 -->
        <div class="process01">
            <!-- 填表區 -->
            <form>
                <label>國家</label>
                <select>
                    <option>台灣</option>
                    <option>日本</option>
                    <option>墨西哥</option>
                </select>

                <label>姓氏</label>
                <input type="text" id="lastname" placeholder="姓氏" />

                <label>名字</label>
                <input type="text" id="firstname" placeholder="名字" />

                <label>性別</label>
                <div class="gender-options">
                    <label><input type="radio" name="gender" value="female" checked> 女</label>
                    <label><input type="radio" name="gender" value="male"> 男</label>
                    <label><input type="radio" name="gender" value="none"> 不方便透露</label>
                </div>

                <label>生日</label>
                <input type="date" id="birthday" />

                <label>電子郵件</label>
                <input type="email" id="email" placeholder="example@email.com" />

                <label>密碼</label>
                <input type="password" id="password" placeholder="密碼" />

                <label>確認密碼</label>
                <input type="password" id="confirmPassword" placeholder="確認密碼" />

                <div class="terms">
                    <input type="checkbox" id="agree" />
                    <label for="agree">我已滿18歲以及同意 <a href="#">服務條款</a></label>
                </div>

                <div class="buttons">
                    <button id="nextBtn">下一步</button>
                </div>
            </form>
            <!-- 警語 -->
            <div class="footer">
                <img src="https://membership.888casino.com/Images/new-form/responsible-logo-18.png" alt="">
                <img src="https://membership.888casino.com/Images/new-form/Lock.png" alt="">
            </div>
        </div>
        <div class="process02">
            <p></p>
            <p>歡迎</p>
        </div>
    </div>

    <script>
        const progress = document.getElementById('progress');
        const circles = document.querySelectorAll('.circle');
        const nextBtn = document.getElementById('nextBtn');
        let currentStep = 1;

        // 更新進度條與圈圈狀態
        function updateProgress() {
            circles.forEach((circle, index) => {
                if (index < currentStep) {
                    circle.classList.add('active');
                } else {
                    circle.classList.remove('active');
                }
            });

            const progressWidth = ((currentStep - 1) / (circles.length - 1)) * 100;
            progress.style.width = progressWidth + '%';

            // 控制按鈕是否可按
            nextBtn.disabled = currentStep === circles.length;
        }
        document.querySelector('.process02').style.display = 'none';
        // 下一步
        nextBtn.addEventListener('click', (e) => {
            e.preventDefault();

            // 取得所有要檢查的欄位
            const requireField = ['lastname', 'firstname', 'birthday', 'email', 'password', 'confirmPassword'];
            let isValid = true;

            requireField.forEach(id => {
                const input = document.getElementById(id);
                //重新檢查前先重置欄位外觀
                input.style.border = '';
                //把不能空白」字樣刪掉
                input.placeholder = input.placeholder.replace('不能空白', '');
                //檢查是否空白
                if (input.value.trim() === '') {
                    isValid = false;
                    input.style.border = '2px solid red';
                    input.placeholder = '不能空白';
                }
            });

            // 如果沒勾選條款
            const agree = document.getElementById('agree')
            if (!agree.checked) {
                isValid = false;
                alert('請勾選同意條款');
            }

            if (!isValid) return;

            // 取值＋組合：姓氏在前、名字在後
            const last = document.getElementById('lastname').value.trim();
            const first = document.getElementById('firstname').value.trim();
            const fullName = (last || first) ? `${last}${first}` : '玩家';

            // 把第一個 <p> 改成「歡迎，姓氏名字」
            const p1 = document.querySelector('.process02 p:first-child');
            p1.textContent = `${fullName}`;

            document.querySelector('.process01').style.display = 'none';
            document.querySelector('.process02').style.display = 'block';
            currentStep++;
            updateProgress();
        });
        // 初始化
        updateProgress();
    </script>
</body>

</html>