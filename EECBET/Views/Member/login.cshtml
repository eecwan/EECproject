@model EECBET.Models.LoginViewModel
@{
    ViewData["Title"] = "ÊúÉÂì°ÁôªÂÖ•";
    Layout = "_Layout";
}

<style>
    .login-page {
        min-height: calc(100vh - 200px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    .login-box {
        background-color: #2a2a2a;
        border: 2px solid #00ff88;
        border-radius: 15px;
        padding: 40px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
        position: relative;
    }

    .login-title {
        text-align: center;
        margin-bottom: 30px;
    }

    .login-title h1 {
        color: #00ff88;
        font-size: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 0;
    }

    .login-title .icon {
        font-size: 40px;
    }

    .login-form-group {
        margin-bottom: 20px;
    }

    .login-form-group label {
        display: block;
        color: #00ff88;
        margin-bottom: 8px;
        font-size: 16px;
        font-weight: bold;
    }

    .login-form-group input {
        width: 100%;
        padding: 12px 15px;
        background-color: #3a3a3a;
        border: 2px solid #4a4a4a;
        border-radius: 8px;
        color: #fff;
        font-size: 16px;
        transition: border-color 0.3s;
        box-sizing: border-box;
    }

    .login-form-group input:focus {
        outline: none;
        border-color: #00ff88;
    }

    .login-form-group input::placeholder {
        color: #888;
    }

    .captcha-container {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .captcha-code {
        background-color: #3a3a3a;
        border: 2px solid #00ff88;
        border-radius: 8px;
        padding: 12px 20px;
        font-size: 24px;
        font-weight: bold;
        color: #00ff88;
        letter-spacing: 8px;
        text-align: center;
        flex: 1;
        user-select: none;
    }

    .captcha-refresh {
        background-color: #4a4a4a;
        border: 2px solid #00ff88;
        border-radius: 8px;
        padding: 12px 20px;
        color: #00ff88;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s;
        white-space: nowrap;
    }

    .captcha-refresh:hover {
        background-color: #00ff88;
        color: #1a1a1a;
    }

    .login-submit {
        width: 100%;
        padding: 15px;
        background-color: #00ff88;
        border: none;
        border-radius: 8px;
        color: #1a1a1a;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 20px;
    }

    .login-submit:hover {
        background-color: #00cc6f;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 255, 136, 0.4);
    }

    .login-links {
        text-align: center;
        margin-top: 20px;
    }

    .login-links a {
        color: #00ff88;
        text-decoration: none;
        margin: 0 10px;
        transition: color 0.3s;
    }

    .login-links a:hover {
        color: #00cc6f;
        text-decoration: underline;
    }

    .login-links .separator {
        color: #666;
    }

    .login-back {
        text-align: center;
        margin-top: 15px;
    }

    .login-back a {
        color: #00ff88;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: color 0.3s;
    }

    .login-back a:hover {
        color: #00cc6f;
    }

    .error-summary {
        background-color: rgba(255, 0, 0, 0.1);
        border: 1px solid #ff4444;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .error-summary ul {
        list-style: none;
        color: #ff4444;
        margin: 0;
        padding: 0;
    }

    .error-summary li {
        margin: 5px 0;
    }

    .error-message {
        color: #ff4444;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    /* ÁôªÂÖ•ÊàêÂäüÊèêÁ§∫ */
    .success-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        animation: fadeIn 0.3s ease-in;
    }

    .success-message {
        background-color: #2a2a2a;
        border: 3px solid #00ff88;
        border-radius: 20px;
        padding: 50px;
        text-align: center;
        box-shadow: 0 0 50px rgba(0, 255, 136, 0.5);
        animation: scaleIn 0.5s ease-out;
    }

    .success-icon {
        font-size: 80px;
        margin-bottom: 20px;
        animation: bounceIn 0.6s ease-out;
    }

    .success-title {
        color: #00ff88;
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .success-text {
        color: #fff;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .success-redirect {
        color: #00ff88;
        font-size: 16px;
        margin-top: 20px;
    }

    .loading-dots {
        display: inline-block;
    }

    .loading-dots span {
        animation: blink 1.4s infinite;
        animation-fill-mode: both;
    }

    .loading-dots span:nth-child(2) {
        animation-delay: 0.2s;
    }

    .loading-dots span:nth-child(3) {
        animation-delay: 0.4s;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0.5);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes bounceIn {
        0% {
            transform: scale(0);
        }
        50% {
            transform: scale(1.2);
        }
        100% {
            transform: scale(1);
        }
    }

    @@keyframes blink {
        0%, 80%, 100% {
            opacity: 0;
        }
        40% {
            opacity: 1;
        }
    }
</style>

<div class="login-page">
