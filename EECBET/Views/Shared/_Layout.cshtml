@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EECBET</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=LXGW+WenKai+Mono+TC&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 你自己的 CSS -->
    <link rel="stylesheet" href="~/css/Lobby.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>


<body>

    <div class="header-container">
        <!-- 頁首 -->
        <header class="site-header">
            <img src="\images\Logo_ECC366.svg" alt="">
        </header>


        <div class="nav-logo-container">
            <nav class="main-nav">
                <ul>
                    <li><a asp-controller="Member" asp-action="Register01">註冊</a></li>
                    <li><a asp-controller="Member" asp-action="login">登入</a></li>
                </ul>
            </nav>
        </div>

        <!-- 跑馬燈 -->
        <div class="marquee">
            <div class="marquee-content">
                <span class="marquee-item">🎊 恭喜玩家 王***明 贏得 $128,000</span>
                <span class="marquee-item">🎁 新會員註冊即送 $500 體驗金</span>
                <span class="marquee-item">🔥 熱門遊戲「黃金埃及」累積獎金突破千萬</span>
                <span class="marquee-item">⭐ 每日簽到送好禮</span>
                <span class="marquee-item">🎊 恭喜玩家 王***明 贏得 $128,000</span>
                <span class="marquee-item">🎁 新會員註冊即送 $500 體驗金</span>
                <span class="marquee-item">🔥 熱門遊戲「黃金埃及」累積獎金突破千萬</span>
                <span class="marquee-item">⭐ 每日簽到送好禮</span>
            </div>
        </div>

        <!-- 搜尋欄 -->
        <form class="search-form">
            <input type="text" placeholder="輸入關鍵字...">
            <button type="submit">搜尋</button>
        </form>
    </div>

    <div class="category-links">
        <ul>
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <img src="https://content001.bet365.mx/Games/CategoryNavIcon/NewColoured/Offers_Colour_Icon.svg"
                        alt="最新活動">
                    <span>最新活動</span>
                </a>
            </li>

            <li>
                <a asp-controller="Home" asp-action="SlotGame_home">
                    <img src="https://content001.bet365.mx/Games/CategoryNavIcon/NewColoured/Slots_Colour_Icon.svg"
                        alt="老虎機">
                    <span>老虎機</span>
                </a>
            </li>

            <li>
                <a asp-controller="Home" asp-action="LotteryMenu">
                    <img src="https://content001.bet365.mx/Games/CategoryNavIcon/NewColoured/Bingo_Coloured_Icon.svg"
                        alt="彩票">
                    <span>彩票</span>
                </a>
            </li>

              <li>
                <a asp-controller="Home" asp-action="SlotMachine">
                    <img src="https://content001.bet365.mx/Games/CategoryNavIcon/NewColoured/Poker_Coloured_Icon.svg"
                        alt="拉霸">
                    <span>拉霸</span>
                </a>
            </li>

            <li><a asp-controller="Home" asp-action="Member">
                    <img src="https://content001.bet365.mx/Games/CategoryNavIcon/NewColoured/Casino_Colour_Icon.svg"
                        alt="會員專區">
                    <span>會員專區</span>
                </a>
            </li>
        </ul>
    </div>

    @RenderBody()
    <!-- Footer -->
    <footer class="bg-dark text-light pt-4 mt-5">
        <div class="container">
            <div class="row">
                <!-- Logo & 描述 -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">beteec</h5>
                    <p>全台最歡樂的遊戲村莊，陪你度過每一個驚喜時刻！</p>
                </div>

                <!-- 快速連結 -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">快速連結</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none">最新活動</a></li>
                        <li><a href="#" class="text-light text-decoration-none">熱門分類</a></li>
                        <li><a href="#" class="text-light text-decoration-none">會員專區</a></li>
                        <li><a href="#" class="text-light text-decoration-none">聯絡我們</a></li>
                    </ul>
                </div>

                <!-- 聯絡資訊 -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">聯絡我們</h6>
                    <p>Email: service@happyvillage.com</p>
                    <p>電話: (02) 1234-5678</p>
                    <div>
                        <a href="#" class="text-light me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light me-2"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>

            <!-- 底部版權 -->
            <div class="text-center py-3 border-top border-secondary">
                © 2025 歡樂破產村 | All Rights Reserved
            </div>
        </div>
    </footer>


    @RenderSection("Scripts", required: false)
</body>

</html>