@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 歡樂破產村</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=LXGW+WenKai+Mono+TC&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 你自己的 CSS -->
    <link rel="stylesheet" href="~/css/Lobby.css" asp-append-version="true" />
</head>

<body>

    <!-- 這裡放你的 header、nav、搜尋列等 -->
    <header class="site-header">
        <h1>歡樂破產村</h1>

        <!-- MENU -->
        <nav class="category-links">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">最新活動</a></li>
                <li><a asp-controller="Home" asp-action="SlotGame_home">老虎機</a></li>             
                <li><a asp-controller="Home" asp-action="Lottery">彩票</a></li>
                <li><a asp-controller="Home" asp-action="Login">會員專區</a></li>
            </ul>
        </nav>

        <!-- 搜尋欄 -->
        <form class="search-form">
            <input type="text" placeholder="輸入關鍵字...">
            <button type="submit">搜尋</button>
        </form>
    </header>

    <!-- 中間頁面內容會自動插入這裡 -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer 原樣保留 -->
    <footer class="bg-dark text-light pt-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">歡樂破產村</h5>
                    <p>全台最歡樂的遊戲村莊，陪你度過每一個驚喜時刻！</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">快速連結</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Events" class="text-light text-decoration-none">最新活動</a></li>
                        <li><a asp-controller="Game" asp-action="Lobby" class="text-light text-decoration-none">熱門分類</a></li>
                        <li><a asp-controller="Member" asp-action="Index" class="text-light text-decoration-none">會員專區</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-light text-decoration-none">聯絡我們</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">聯絡我們</h6>
                    <p>Email: service@happyvillage.com</p>
                    <p>電話: (02) 1234-5678</p>
                </div>
            </div>
            <div class="text-center py-3 border-top border-secondary">
                © 2025 歡樂破產村 | All Rights Reserved
            </div>
        </div>
    </footer>

    <!-- 共用腳本 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
